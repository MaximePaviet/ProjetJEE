<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">
  <persistence-unit name="default">

    <!-- Classes entité gérées -->
    <class>models.Assessment</class>
    <class>models.Grade</class>
    <class>models.Course</class>
    <class>models.Student</class>
    <class>models.Teacher</class>

    <!-- Configuration JDBC -->
    <properties>
      <!-- Connexion à la base de données -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/projetjee?useSSL=false&amp;serverTimezone=UTC"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="Cytech0001"/>

      <!-- Hibernate specific properties -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

      <!-- Schéma de base de données -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <!-- Affichage des logs SQL -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
